    <script>
        setTimeout(() => {
            // Fade out the intro
            document.getElementById('intro').style.animation = "fadeOut 1s ease forwards";

            // After the intro fades out, make the main content visible and fade it in
            setTimeout(() => {
                const main = document.getElementById('main');
                main.style.visibility = "visible";  // Set visibility to visible
                main.style.opacity = 1;  // Trigger opacity transition for fade-in effect
            }, 1000); // 1000ms (same as the fade-out duration of the intro)
        }, 2000); // Wait for 2 seconds before starting the fade-out of intro
